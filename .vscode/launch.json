{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "java",
      "name": "ProjectApplication",
      "request": "launch",
      "mainClass": "com.example.demo.ProjectApplication",
      "projectName": "demo",
      "args": [
        "--database_password=${input:database_password}",
        "--secret=${input:secret}"
      ]
    }
  ],
  "inputs": [
    {
      "id": "database_password",
      "type": "command",
      "command": "extension.commandvariable.file.content",
      "args": {
        "fileName": "${workspaceFolder}/src/main/resources/secret.properties",
        "key": "database_password"
      }
    },
    {
      "id": "secret",
      "type": "command",
      "command": "extension.commandvariable.file.content",
      "args": {
        "fileName": "${workspaceFolder}/src/main/resources/secret.properties",
        "key": "secret"
      }
    }
  ]
}