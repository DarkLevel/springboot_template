{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "java",
      "name": "ProjectApplication",
      "request": "launch",
      "mainClass": "com.example.demo.ProjectApplication",
      "projectName": "demo",
      "args": [
        "--databasePassword=${input:databasePassword}",
        "--tokenSecret=${input:tokenSecret}"
      ]
    }
  ],
  "inputs": [
    {
      "id": "databasePassword",
      "type": "command",
      "command": "extension.commandvariable.file.content",
      "args": {
        "fileName": "${workspaceFolder}/src/main/resources/secrets.yaml",
        "yaml": "content.databasePassword"
      }
    },
    {
      "id": "tokenSecret",
      "type": "command",
      "command": "extension.commandvariable.file.content",
      "args": {
        "fileName": "${workspaceFolder}/src/main/resources/secrets.yaml",
        "yaml": "content.tokenSecret"
      }
    }
  ]
}